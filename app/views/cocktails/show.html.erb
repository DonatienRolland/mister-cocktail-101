<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-6 col-sm-offset-3">
      <h1><%= @cocktail.name %></h1>
      <ul>
        <% @cocktail.doses.each do |dose| %>
          <li><%= dose.description %> de <%= dose.ingredient.name %> </li>
        <% end %>
      </ul>
      <%= simple_form_for [@cocktail, @dose] do |f| %>
        <%= f.input :description, placeholder: "6cl" %>
        <%= f.association :ingredient, prompt: "Select an ingredient" %>
        <%= f.submit "Add an ingredient", class: "btn btn-primary" %>
      <% end %>
      <%= link_to '<i class="fa fa-trash-o" aria-hidden="true"></i>'.html_safe, cocktail_path(@cocktail), method: :delete, data: {confirm: "Are you sure?"} %>
      <%= link_to 'Back', root_path %>
    </div>
  </div>
</div>
